---
import TimeLineElement from "../components/cv/TimeLine.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Resume" sideBarActiveItemID="academic_cv">
  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Education</div>
    <hr style="margin-top: 10px; border: 2px solid blue;">
  </div>
  <div class="time-line-container mb-10">
    <TimeLineElement
      title="M.Sc. in Mechanical Engineering"
      subtitle="2022 to 2024 at Sharif University of Technology, Tehran, Iran"
    >
      <div>Cumulative GPA: 18.13/20 (3.88/4.0) (GPA of the field 16.88/20)</div>
      <div>Thesis title: Enhancing Training Time and Accuracy of Physics-Informed Neural Networks</div>
    </TimeLineElement>
    <TimeLineElement
      title="B.Sc. in Mechanical Engineering"
      subtitle="2017 to 2022 at Imam Khomeini International University, Qazvin, Iran"
    >
      <div>Last two years' GPA: 16.73/20 (3.49/4.0)</div>
      <div>Cumulative GPA: 15.73/20 (3.22/4.0) (GPA of the field 14.73/20)</div>
      <div>Thesis title: A Novel Approach for Reducing Feature Space Dimensionality and Develop a Universal Machine-Learning Model for Coated Tubes in Cross Flow Heat Exchangers</div>
    </TimeLineElement>
  </div>

  <div class="mb-5 research-interests-section" style="margin-top: 50px;">
    <div class="text-3xl w-full font-bold">Research Interests</div>
    <hr style="margin-top: 10px; border: 2px solid blue;">
  </div>
  <div class="mx-6">
    <div class="skills-container">
      <div class="skill-box">Deep Learning</div>
      <div class="skill-box">AI for science</div>
      <div class="skill-box">Scientific Machine Learning</div>
      <div class="skill-box">Turbulence</div>
      <div class="skill-box">Generalization</div>
      <div class="skill-box">Physics Informed Neural Networks</div>
    </div>
  </div>
  
  <style>
    .skills-container {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
    }
    .skill-box {
      background-color: #f0f0f0;
      border: 1px solid #ddd;
      border-radius: 5px;
      padding: 10px;
      box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.144);
      width: calc(50% - 10px); /* Adjust width as needed */
    }
  </style>
  

<div class="mb-5 selected-courses-section" style="margin-top: 50px;">
  <div class="text-3xl w-full font-bold">Selected Courses from the Computer Science Department</div>
  <hr style="margin-top: 10px; border: 2px solid blue;">
</div>
<ul class="list-disc mx-6">
  <li style="display: inline-block; margin-right: 40px;">Machine Learning: 19/20</li>
  <li style="display: inline-block;">Deep Learning: 18.5/20</li>
</ul>





